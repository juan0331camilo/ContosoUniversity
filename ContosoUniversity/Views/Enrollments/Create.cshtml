@model ContosoUniversity.Models.Enrollment

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Enrollment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseID" class="control-label"></label>
                @Html.DropDownListFor(m => m.CourseID, new SelectList(ViewBag.Courses, "CourseID", "Title"), new { @class = "form-control" })
                <!-- <select asp-for="CourseID" class="form-control" asp-items="ViewBag.CourseID"></select>-->
            </div>
            <div class="form-group">
                <label asp-for="StudentID" class="control-label"></label>
                @Html.DropDownListFor(m => m.StudentID, new SelectList(ViewBag.Students, "ID", "LastName"), new { @class = "form-control" })
                <!--- <select asp-for="StudentID" class="form-control" asp-items="ViewBag.StudentID"></select>-->
            </div>
            <div class="form-group">
                <label asp-for="Grade" class="control-label"></label>
                @Html.DropDownListFor(m => m.Grade, new SelectList(Enum.GetValues(typeof(Grade)), "Grade"), new { @class = "form-control" })
                <!--<input asp-for="Grade" class="form-control" />-->
                <span asp-validation-for="Grade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    </div>

